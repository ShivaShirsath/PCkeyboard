<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="10dp"
	android:gravity="center">

	<EditText
		android:hint="@string/main_setup_test"
		android:id="@+id/main_setup_edit_test"
		android:layout_width="fill_parent"
		android:gravity="center"
		android:layout_height="wrap_content"
		android:layout_weight="1"/>
	
	<Button
		android:text="@string/main_setup_configure_imes"
		android:id="@+id/main_setup_btn_configure_imes"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"/>

	<Button
		android:text="@string/main_setup_input_lang"
		android:id="@+id/main_setup_btn_input_lang"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"/>

	<Button
		android:text="@string/main_setup_set_ime"
		android:id="@+id/main_setup_btn_set_ime"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"/>

	<Button
		android:text="@string/main_setup_settings"
		android:id="@+id/main_setup_btn_settings"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"/>

	
<!--
	<TextView
		android:layout_height="wrap_content"
		android:id="@+id/main_description"
		android:layout_width="match_parent"
		android:gravity="center"/>
-->
</LinearLayout>
